{
  "mcpServers": {
    "serena": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena-mcp-server",
        "--context",
        "ide-assistant"
      ]
    },
    "playwright": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@playwright/mcp@latest",
        "--browser",
        "chrome",
        "--headless"
      ]
    },
    "sqlite": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "mcp-server-sqlite",
        "--db-path",
        "./.claude/database.db"
      ]
    },
    "ssh-mcp": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "ssh-mcp",
        "--",
        "--host=YOUR_SERVER_HOST",
        "--port=22",
        "--user=YOUR_USERNAME",
        "--key=/path/to/your/ssh/key",
        "--timeout=60000",
        "--maxChars=none"
      ]
    },
    "github": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp/",
      "headers": {
        "Authorization": "YOUR_GITHUB_TOKEN"
      }
    },
    "svelte-llm": {
      "type": "stdio",
      "command": "npx",
      "args": ["mcp-remote", "https://svelte-llm.stanislav.garden/mcp/mcp"]
    }
  }
}
