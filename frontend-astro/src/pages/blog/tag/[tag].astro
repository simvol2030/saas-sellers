---
/**
 * Tag Page - статьи по тегу
 */
import Base from '../../../layouts/Base.astro';
import PostList from '../../../components/PostList.astro';
import { getMdPosts, getMdTags } from '../../../lib/content';

export async function getStaticPaths() {
  const tags = await getMdTags();

  return tags.map((tag) => ({
    params: { tag },
    props: { tag },
  }));
}

const { tag } = Astro.props;
const posts = await getMdPosts({ tag });
---

<Base
  title={`Тег: #${tag}`}
  description={`Статьи с тегом #${tag}`}
>
  <div class="tag-page">
    <header class="tag-header">
      <div class="container">
        <nav class="breadcrumb">
          <a href="/">Главная</a>
          <span>/</span>
          <a href="/blog">Блог</a>
          <span>/</span>
          <span>Тег</span>
        </nav>
        <h1 class="page-title">
          <span class="tag-badge">#{tag}</span>
        </h1>
        <p class="page-description">
          {posts.length} {posts.length === 1 ? 'статья' : posts.length < 5 ? 'статьи' : 'статей'}
        </p>
      </div>
    </header>

    <div class="tag-content container">
      <PostList posts={posts} />
    </div>
  </div>
</Base>

<style>
  .tag-page {
    min-height: 100vh;
  }

  .tag-header {
    padding: var(--space-8) 0 var(--space-12);
    background: var(--color-bg-secondary);
    border-bottom: 1px solid var(--color-border);
  }

  .breadcrumb {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin-bottom: var(--space-4);
  }

  .breadcrumb a {
    color: var(--color-text-muted);
  }

  .breadcrumb a:hover {
    color: var(--color-primary);
  }

  .page-title {
    font-size: 2.5rem;
    font-weight: 800;
    margin-bottom: var(--space-3);
  }

  .tag-badge {
    display: inline-block;
    padding: var(--space-2) var(--space-4);
    background: var(--color-primary);
    color: white;
    border-radius: var(--radius-md);
  }

  .page-description {
    font-size: 1.125rem;
    color: var(--color-text-muted);
  }

  .tag-content {
    padding: var(--space-8) var(--space-4);
  }
</style>
