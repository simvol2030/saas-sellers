---
/**
 * Admin Payment Providers
 *
 * Manage payment methods (YooKassa, Telegram Stars, etc.)
 */
import Admin from '../../../layouts/Admin.astro';
import PaymentProvidersList from '../../../components/admin/PaymentProvidersList.svelte';

export const prerender = false;
---

<Admin title="Платёжные провайдеры">
