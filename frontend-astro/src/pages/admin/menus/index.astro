---
/**
 * Admin Menus List
 *
 * CRUD управление навигационными меню
 */
import Admin from '../../../layouts/Admin.astro';
import MenusList from '../../../components/admin/MenusList.svelte';

export const prerender = false;
---

<Admin title="Меню">
