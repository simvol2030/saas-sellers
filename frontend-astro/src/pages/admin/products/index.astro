---
/**
 * Admin Products List
 *
 * CRUD for e-commerce products
 */
import Admin from '../../../layouts/Admin.astro';
import ProductsList from '../../../components/admin/ProductsList.svelte';

export const prerender = false;
---

<Admin title="Товары">
  <script is:inline>
    (function() {
      if (!localStorage.getItem('accessToken')) {
        window.location.href = '/admin/login';
      }
    })();
  </script>

  <ProductsList client:load />
</Admin>
