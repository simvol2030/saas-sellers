---
/**
 * Admin Product Import/Export Page
 *
 * Bulk import and export products via JSON/CSV
 */
import Admin from '../../../layouts/Admin.astro';
import ProductImportExport from '../../../components/admin/ProductImportExport.svelte';

export const prerender = false;
---

<Admin title="Импорт/Экспорт товаров">
  <script is:inline>
    (function() {
      if (!localStorage.getItem('accessToken')) {
        window.location.href = '/admin/login';
      }
    })();
  </script>

  <div class="page-header">
    <a href="/admin/products" class="back-link">← Назад к товарам</a>
    <h1>Импорт/Экспорт товаров</h1>
  </div>

  <ProductImportExport client:load />
</Admin>

<style>
  .page-header {
    margin-bottom: 1.5rem;
  }

  .back-link {
    color: var(--text-secondary, #666);
    text-decoration: none;
    font-size: 0.875rem;
    display: inline-block;
    margin-bottom: 0.5rem;
  }

  .back-link:hover {
    color: var(--primary-color, #3b82f6);
  }

  h1 {
    margin: 0;
    font-size: 1.5rem;
  }
</style>
