---
/**
 * Admin Promo Codes
 *
 * Manage promotional codes and discounts
 */
import Admin from '../../../layouts/Admin.astro';
import PromoCodesList from '../../../components/admin/PromoCodesList.svelte';

export const prerender = false;
---

<Admin title="Промокоды">
