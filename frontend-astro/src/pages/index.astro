---
/**
 * Homepage - главная страница
 */
export const prerender = true;

import Base from '../layouts/Base.astro';
import PostList from '../components/PostList.astro';
import { getMdPosts, getMdCategories } from '../lib/content';

// Получаем последние посты
const latestPosts = await getMdPosts({ limit: 6 });
const featuredPosts = await getMdPosts({ featured: true, limit: 1 });
const categories = await getMdCategories();
---

<Base
  title="Content Platform"
  description="Универсальная контентная платформа для создания современных веб-сайтов"
>
  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <div class="hero-content">
        <h1 class="hero-title">
          Создавайте контент,<br/>
          <span class="highlight">который вдохновляет</span>
        </h1>
        <p class="hero-description">
          Универсальная контентная платформа на базе Astro и Hono.
          Поддержка Markdown и SQLite для гибкого управления контентом.
        </p>
        <div class="hero-actions">
          <a href="/blog" class="btn btn-primary">
            Читать блог
          </a>
          <a href="/about" class="btn btn-secondary">
            Узнать больше
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Post -->
  {featuredPosts.length > 0 && (
    <section class="featured-section container">
      <h2 class="section-title">Избранное</h2>
      <PostList posts={featuredPosts} showFeatured={true} />
    </section>
  )}

  <!-- Categories -->
  {categories.length > 0 && (
    <section class="categories-section">
      <div class="container">
        <h2 class="section-title">Категории</h2>
        <div class="categories-grid">
          {categories.map((category) => (
            <a href={`/blog/category/${category}`} class="category-card">
              <span class="category-name">{category}</span>
              <span class="category-arrow">→</span>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Latest Posts -->
  <section class="latest-section container">
    <div class="section-header">
      <h2 class="section-title">Последние статьи</h2>
      <a href="/blog" class="section-link">Все статьи →</a>
    </div>
    <PostList posts={latestPosts} />
  </section>

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="container">
      <div class="cta-content">
        <h2 class="cta-title">Готовы начать?</h2>
        <p class="cta-description">
          Используйте этот шаблон для быстрого создания собственного контентного проекта.
        </p>
        <a href="https://github.com" target="_blank" rel="noopener noreferrer" class="btn btn-primary">
          Получить на GitHub
        </a>
      </div>
    </div>
  </section>
</Base>

<style>
  /* Hero */
  .hero {
    padding: var(--space-16) 0;
    background: linear-gradient(135deg, var(--color-bg) 0%, var(--color-bg-secondary) 100%);
  }

  .hero-content {
    max-width: 700px;
  }

  .hero-title {
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: var(--space-6);
  }

  .hero-title .highlight {
    color: var(--color-primary);
  }

  .hero-description {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    line-height: 1.6;
    margin-bottom: var(--space-8);
  }

  .hero-actions {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-3);
  }

  /* Buttons */
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-3) var(--space-6);
    font-weight: 600;
    font-size: 1rem;
    border-radius: var(--radius-md);
    text-decoration: none;
    transition: all 0.2s;
  }

  .btn-primary {
    background: var(--color-primary);
    color: white;
  }

  .btn-primary:hover {
    background: var(--color-primary-dark);
    text-decoration: none;
  }

  .btn-secondary {
    background: var(--color-bg);
    color: var(--color-text);
    border: 1px solid var(--color-border);
  }

  .btn-secondary:hover {
    background: var(--color-bg-secondary);
    text-decoration: none;
  }

  /* Sections */
  .section-title {
    font-size: 1.75rem;
    font-weight: 700;
    margin-bottom: var(--space-6);
  }

  .section-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: var(--space-6);
  }

  .section-header .section-title {
    margin-bottom: 0;
  }

  .section-link {
    color: var(--color-primary);
    font-weight: 500;
  }

  .featured-section {
    padding: var(--space-12) var(--space-4);
  }

  /* Categories */
  .categories-section {
    padding: var(--space-12) 0;
    background: var(--color-bg-secondary);
  }

  .categories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: var(--space-4);
  }

  .category-card {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--space-4) var(--space-6);
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    text-decoration: none;
    transition: all 0.2s;
  }

  .category-card:hover {
    border-color: var(--color-primary);
    box-shadow: var(--shadow-md);
    transform: translateY(-2px);
  }

  .category-name {
    font-weight: 600;
    color: var(--color-text);
    text-transform: capitalize;
  }

  .category-arrow {
    color: var(--color-primary);
    font-size: 1.25rem;
  }

  /* Latest */
  .latest-section {
    padding: var(--space-12) var(--space-4);
  }

  /* CTA */
  .cta-section {
    padding: var(--space-16) 0;
    background: var(--color-primary);
    color: white;
  }

  .cta-content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .cta-title {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: var(--space-4);
  }

  .cta-description {
    font-size: 1.125rem;
    opacity: 0.9;
    margin-bottom: var(--space-6);
  }

  .cta-section .btn-primary {
    background: white;
    color: var(--color-primary);
  }

  .cta-section .btn-primary:hover {
    background: var(--color-bg-secondary);
  }
</style>
