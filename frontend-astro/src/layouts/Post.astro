---
/**
 * Post Layout - шаблон для статей блога
 */
import type { CollectionEntry } from 'astro:content';
import Base from './Base.astro';
import PostMeta from '../components/PostMeta.astro';
import TableOfContents from '../components/TableOfContents.astro';
import TagList from '../components/TagList.astro';

interface Props {
  post: CollectionEntry<'blog'>;
  headings?: { depth: number; slug: string; text: string }[];
}

const { post, headings = [] } = Astro.props;
const { title, description, publishedAt, updatedAt, author, image, tags, category } = post.data;

const showToc = headings.length > 2;
---

<Base
  title={title}
  description={description}
  image={image?.src}
  class="post-layout"
>
  <article class="post">
    <header class="post-header container container-narrow">
      {category && (
        <a href={`/blog/category/${category}`} class="post-category">
          {category}
        </a>
      )}

      <h1 class="post-title">{title}</h1>

      {description && (
        <p class="post-excerpt">{description}</p>
      )}

      <PostMeta
        publishedAt={publishedAt}
        updatedAt={updatedAt}
        author={author}
      />

      {image && (
        <figure class="post-image">
          <img src={image.src} alt={image.alt} loading="eager" />
        </figure>
      )}
    </header>

    <div class="post-body container">
      <div class={`post-grid ${showToc ? 'with-toc' : ''}`}>
        {showToc && (
          <aside class="post-sidebar">
            <TableOfContents headings={headings} />
          </aside>
        )}

        <div class="post-content prose">
          <slot />
        </div>
      </div>
    </div>

    <footer class="post-footer container container-narrow">
      {tags && tags.length > 0 && (
        <div class="post-tags">
          <span class="tags-label">Теги:</span>
          <TagList tags={tags} />
        </div>
      )}

      <div class="post-share">
        <span class="share-label">Поделиться:</span>
        <div class="share-buttons">
          <a
            href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(title)}&url=${encodeURIComponent(Astro.url.href)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="share-btn"
          >
            Twitter
          </a>
          <a
            href={`https://t.me/share/url?url=${encodeURIComponent(Astro.url.href)}&text=${encodeURIComponent(title)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="share-btn"
          >
            Telegram
          </a>
        </div>
      </div>
    </footer>
  </article>
</Base>

<style>
  .post-header {
    padding-top: var(--space-12);
    padding-bottom: var(--space-8);
    text-align: center;
  }

  .post-category {
    display: inline-block;
    padding: var(--space-1) var(--space-3);
    background: var(--color-primary);
    color: white;
    border-radius: var(--radius-sm);
    font-size: 0.875rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-4);
  }

  .post-category:hover {
    background: var(--color-primary-dark);
    text-decoration: none;
  }

  .post-title {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 800;
    line-height: 1.2;
    margin-bottom: var(--space-4);
  }

  .post-excerpt {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    margin-bottom: var(--space-6);
  }

  .post-image {
    margin-top: var(--space-8);
    border-radius: var(--radius-lg);
    overflow: hidden;
  }

  .post-image img {
    width: 100%;
    height: auto;
    aspect-ratio: 16/9;
    object-fit: cover;
  }

  .post-body {
    padding: var(--space-8) 0;
  }

  .post-grid {
    display: grid;
    gap: var(--space-8);
  }

  .post-grid.with-toc {
    grid-template-columns: 1fr 250px;
  }

  @media (max-width: 1024px) {
    .post-grid.with-toc {
      grid-template-columns: 1fr;
    }

    .post-sidebar {
      order: -1;
    }
  }

  .post-sidebar {
    position: sticky;
    top: var(--space-8);
    height: fit-content;
  }

  /* Prose styles for content */
  .prose {
    max-width: var(--container-narrow);
    font-size: 1.125rem;
    line-height: 1.75;
  }

  .prose :global(h2) {
    font-size: 1.75rem;
    font-weight: 700;
    margin-top: var(--space-12);
    margin-bottom: var(--space-4);
  }

  .prose :global(h3) {
    font-size: 1.5rem;
    font-weight: 600;
    margin-top: var(--space-8);
    margin-bottom: var(--space-3);
  }

  .prose :global(p) {
    margin-bottom: var(--space-4);
  }

  .prose :global(ul), .prose :global(ol) {
    margin-bottom: var(--space-4);
    padding-left: var(--space-6);
  }

  .prose :global(li) {
    margin-bottom: var(--space-2);
  }

  .prose :global(pre) {
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    padding: var(--space-4);
    overflow-x: auto;
    margin-bottom: var(--space-4);
  }

  .prose :global(code) {
    font-family: 'Fira Code', monospace;
    font-size: 0.9em;
  }

  .prose :global(:not(pre) > code) {
    background: var(--color-bg-secondary);
    padding: 0.2em 0.4em;
    border-radius: var(--radius-sm);
  }

  .prose :global(blockquote) {
    border-left: 4px solid var(--color-primary);
    padding-left: var(--space-4);
    margin: var(--space-6) 0;
    font-style: italic;
    color: var(--color-text-muted);
  }

  .prose :global(img) {
    border-radius: var(--radius-md);
    margin: var(--space-6) 0;
  }

  .post-footer {
    padding: var(--space-8) 0 var(--space-12);
    border-top: 1px solid var(--color-border);
    margin-top: var(--space-8);
  }

  .post-tags {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    flex-wrap: wrap;
    margin-bottom: var(--space-6);
  }

  .tags-label, .share-label {
    font-weight: 500;
    color: var(--color-text-muted);
  }

  .post-share {
    display: flex;
    align-items: center;
    gap: var(--space-3);
  }

  .share-buttons {
    display: flex;
    gap: var(--space-2);
  }

  .share-btn {
    padding: var(--space-2) var(--space-4);
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    font-size: 0.875rem;
    transition: all 0.2s;
  }

  .share-btn:hover {
    background: var(--color-primary);
    border-color: var(--color-primary);
    color: white;
    text-decoration: none;
  }
</style>
