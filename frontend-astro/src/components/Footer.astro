---
/**
 * Footer Component - подвал сайта
 */
const currentYear = new Date().getFullYear();

interface FooterLink {
  label: string;
  href: string;
}

const footerLinks: { title: string; links: FooterLink[] }[] = [
  {
    title: 'Навигация',
    links: [
      { label: 'Главная', href: '/' },
      { label: 'Блог', href: '/blog' },
      { label: 'О проекте', href: '/about' },
    ],
  },
  {
    title: 'Ресурсы',
    links: [
      { label: 'Документация', href: '/docs' },
      { label: 'API', href: '/api' },
      { label: 'GitHub', href: 'https://github.com' },
    ],
  },
  {
    title: 'Правовая информация',
    links: [
      { label: 'Политика конфиденциальности', href: '/privacy' },
      { label: 'Условия использования', href: '/terms' },
    ],
  },
];
---

<footer class="footer">
  <div class="footer-container container">
    <div class="footer-grid">
      <!-- Brand -->
      <div class="footer-brand">
        <a href="/" class="footer-logo">
          <span class="logo-icon">CP</span>
          <span>Content Platform</span>
        </a>
        <p class="footer-description">
          Универсальная контентная платформа для создания современных веб-сайтов.
        </p>
      </div>

      <!-- Links -->
      {footerLinks.map((group) => (
        <div class="footer-links">
          <h4 class="footer-links-title">{group.title}</h4>
          <ul class="footer-links-list">
            {group.links.map((link) => (
              <li>
                <a href={link.href} class="footer-link">
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <div class="footer-bottom">
      <p class="copyright">
        &copy; {currentYear} Content Platform. Все права защищены.
      </p>
      <p class="tech-stack">
        Создано с помощью <a href="https://astro.build" target="_blank" rel="noopener">Astro</a> и <a href="https://hono.dev" target="_blank" rel="noopener">Hono</a>
      </p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--color-bg-secondary);
    border-top: 1px solid var(--color-border);
    margin-top: auto;
  }

  .footer-container {
    padding: var(--space-12) var(--space-4) var(--space-8);
  }

  .footer-grid {
    display: grid;
    gap: var(--space-8);
    margin-bottom: var(--space-8);
  }

  @media (min-width: 640px) {
    .footer-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .footer-grid {
      grid-template-columns: 2fr repeat(3, 1fr);
    }
  }

  /* Brand */
  .footer-brand {
    max-width: 300px;
  }

  .footer-logo {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-weight: 700;
    font-size: 1.125rem;
    color: var(--color-text);
    text-decoration: none;
    margin-bottom: var(--space-3);
  }

  .footer-logo .logo-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    background: var(--color-primary);
    color: white;
    border-radius: var(--radius-md);
    font-size: 0.75rem;
    font-weight: 700;
  }

  .footer-description {
    color: var(--color-text-muted);
    font-size: 0.875rem;
    line-height: 1.6;
  }

  /* Links */
  .footer-links-title {
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text);
    margin-bottom: var(--space-4);
  }

  .footer-links-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .footer-link {
    color: var(--color-text-muted);
    font-size: 0.875rem;
    text-decoration: none;
    transition: color 0.2s;
  }

  .footer-link:hover {
    color: var(--color-primary);
  }

  /* Bottom */
  .footer-bottom {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
    padding-top: var(--space-6);
    border-top: 1px solid var(--color-border);
    text-align: center;
  }

  @media (min-width: 640px) {
    .footer-bottom {
      flex-direction: row;
      justify-content: space-between;
      text-align: left;
    }
  }

  .copyright,
  .tech-stack {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  .tech-stack a {
    color: var(--color-primary);
  }
</style>
