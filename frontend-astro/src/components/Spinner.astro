---
interface Props {
	size?: 'sm' | 'md' | 'lg';
	color?: string;
}

const {
	size = 'md',
	color = '#3b82f6'
} = Astro.props;

const sizes = {
	sm: '1rem',
	md: '2rem',
	lg: '3rem'
};
---

<div
	class="spinner"
	style={`width: ${sizes[size]}; height: ${sizes[size]}; border-color: ${color} transparent transparent transparent;`}
></div>

<style>
	.spinner {
		border: 3px solid;
		border-radius: 50%;
		animation: spin 1s linear infinite;
	}

	@keyframes spin {
		0% {
			transform: rotate(0deg);
		}
		100% {
			transform: rotate(360deg);
		}
	}
</style>
