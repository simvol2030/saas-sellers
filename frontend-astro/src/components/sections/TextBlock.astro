---
/**
 * TextBlock Section - текстовый блок с Markdown
 *
 * Features:
 * - Рендеринг Markdown контента
 * - Настраиваемая ширина контейнера
 * - Опционально 2 колонки
 * - Prose стили для типографики
 */

import type { TextBlockSection } from '../../lib/parser';

interface Props extends Omit<TextBlockSection, 'type'> {}

const {
  id,
  className,
  content,
  columns = 1,
  maxWidth = 'md',
} = Astro.props;

const maxWidthClasses = {
  sm: 'max-w-sm',
  md: 'max-w-md',
  lg: 'max-w-lg',
  full: 'max-w-full',
};

// Simple markdown to HTML conversion for basic formatting
// For full markdown support, use a proper parser like marked
function simpleMarkdown(text: string): string {
  return text
    // Headers
    .replace(/^### (.*$)/gim, '<h3>$1</h3>')
    .replace(/^## (.*$)/gim, '<h2>$1</h2>')
    .replace(/^# (.*$)/gim, '<h1>$1</h1>')
    // Bold and italic
    .replace(/\*\*\*(.*?)\*\*\*/gim, '<strong><em>$1</em></strong>')
    .replace(/\*\*(.*?)\*\*/gim, '<strong>$1</strong>')
    .replace(/\*(.*?)\*/gim, '<em>$1</em>')
    // Links
    .replace(/\[([^\]]+)\]\(([^)]+)\)/gim, '<a href="$2">$1</a>')
    // Lists
    .replace(/^\- (.*$)/gim, '<li>$1</li>')
    .replace(/(<li>.*<\/li>)/s, '<ul>$1</ul>')
    // Line breaks and paragraphs
    .replace(/\n\n/g, '</p><p>')
    .replace(/\n/g, '<br>')
    // Wrap in paragraph if not already wrapped
    .replace(/^(?!<[h|u|o|p])(.+)$/gim, '<p>$1</p>');
}

const htmlContent = simpleMarkdown(content);
---

<section
  id={id}
  class:list={['text-block section', className]}
>
  <div class="container">
    <div
      class:list={[
        'text-block-inner prose',
        maxWidthClasses[maxWidth],
        { 'text-block-columns': columns === 2 },
      ]}
      set:html={htmlContent}
    />
  </div>
</section>

<style>
  .text-block {
    background: var(--color-background);
  }

  .text-block-inner {
    margin: 0 auto;
  }

  /* Max width variants */
  .max-w-sm {
    max-width: var(--spacing-container-sm);
  }

  .max-w-md {
    max-width: var(--spacing-container-md);
  }

  .max-w-lg {
    max-width: var(--spacing-container-lg);
  }

  .max-w-full {
    max-width: 100%;
  }

  /* Two columns layout */
  .text-block-columns {
    column-count: 1;
  }

  @media (min-width: 768px) {
    .text-block-columns {
      column-count: 2;
      column-gap: var(--spacing-8);
    }
  }

  /* Prose styles */
  .prose {
    color: var(--color-text);
    line-height: var(--font-line-height-relaxed);
  }

  .prose :global(h1) {
    margin-top: 0;
    margin-bottom: var(--spacing-6);
    font-size: var(--font-font-size-4xl);
    font-weight: var(--font-font-weight-bold);
    line-height: var(--font-line-height-tight);
    color: var(--color-text);
  }

  .prose :global(h2) {
    margin-top: var(--spacing-10);
    margin-bottom: var(--spacing-4);
    font-size: var(--font-font-size-3xl);
    font-weight: var(--font-font-weight-bold);
    line-height: var(--font-line-height-tight);
    color: var(--color-text);
  }

  .prose :global(h3) {
    margin-top: var(--spacing-8);
    margin-bottom: var(--spacing-3);
    font-size: var(--font-font-size-2xl);
    font-weight: var(--font-font-weight-semibold);
    color: var(--color-text);
  }

  .prose :global(p) {
    margin-bottom: var(--spacing-4);
  }

  .prose :global(p:last-child) {
    margin-bottom: 0;
  }

  .prose :global(a) {
    color: var(--color-primary);
    text-decoration: underline;
    text-underline-offset: 2px;
    transition: color var(--transition-fast);
  }

  .prose :global(a:hover) {
    color: var(--color-primary-hover);
  }

  .prose :global(strong) {
    font-weight: var(--font-font-weight-semibold);
    color: var(--color-text);
  }

  .prose :global(em) {
    font-style: italic;
  }

  .prose :global(ul),
  .prose :global(ol) {
    margin: var(--spacing-4) 0;
    padding-left: var(--spacing-6);
  }

  .prose :global(li) {
    margin-bottom: var(--spacing-2);
  }

  .prose :global(li::marker) {
    color: var(--color-primary);
  }

  .prose :global(blockquote) {
    margin: var(--spacing-6) 0;
    padding: var(--spacing-4) var(--spacing-6);
    border-left: 4px solid var(--color-primary);
    background: var(--color-background-secondary);
    font-style: italic;
    color: var(--color-text-secondary);
  }

  .prose :global(blockquote p) {
    margin: 0;
  }

  .prose :global(code) {
    padding: var(--spacing-1) var(--spacing-2);
    font-family: var(--font-font-family-mono);
    font-size: 0.875em;
    background: var(--color-background-tertiary);
    border-radius: var(--radius-sm);
  }

  .prose :global(pre) {
    margin: var(--spacing-6) 0;
    padding: var(--spacing-4);
    overflow-x: auto;
    background: var(--color-background-tertiary);
    border-radius: var(--radius-lg);
  }

  .prose :global(pre code) {
    padding: 0;
    background: none;
  }

  .prose :global(hr) {
    margin: var(--spacing-8) 0;
    border: none;
    border-top: 1px solid var(--color-border);
  }

  .prose :global(img) {
    max-width: 100%;
    height: auto;
    margin: var(--spacing-6) 0;
    border-radius: var(--radius-lg);
  }
</style>
