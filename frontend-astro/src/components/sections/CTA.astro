---
/**
 * CTA Section - призыв к действию
 *
 * Features:
 * - Заголовок и описание
 * - Primary и Secondary кнопки
 * - Варианты оформления (default/primary/dark)
 * - Центрированный контент
 */

import type { CTASection } from '../../lib/parser';

interface Props extends Omit<CTASection, 'type'> {}

const {
  id,
  className,
  title,
  description,
  buttonText,
  buttonHref,
  secondaryText,
  secondaryHref,
  variant = 'default',
} = Astro.props;

const variantClasses = {
  default: 'cta-default',
  primary: 'cta-primary',
  dark: 'cta-dark',
};
---

<section
  id={id}
  class:list={['cta section', variantClasses[variant], className]}
>
  <div class="container">
    <div class="cta-inner">
      <h2 class="cta-title">{title}</h2>

      {description && (
        <p class="cta-description">{description}</p>
      )}

      <div class="cta-actions">
        <a href={buttonHref} class="btn btn-lg cta-btn-primary">
          {buttonText}
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>

        {secondaryText && secondaryHref && (
          <a href={secondaryHref} class="btn btn-lg cta-btn-secondary">
            {secondaryText}
          </a>
        )}
      </div>
    </div>
  </div>
</section>

<style>
  .cta {
    position: relative;
    overflow: hidden;
  }

  .cta-inner {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .cta-title {
    margin: 0 0 var(--spacing-4);
    font-size: var(--font-font-size-3xl);
    font-weight: var(--font-font-weight-bold);
    line-height: var(--font-line-height-tight);
  }

  @media (min-width: 768px) {
    .cta-title {
      font-size: var(--font-font-size-4xl);
    }
  }

  .cta-description {
    margin: 0 0 var(--spacing-8);
    font-size: var(--font-font-size-lg);
    line-height: var(--font-line-height-relaxed);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .cta-actions {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--spacing-4);
  }

  .cta-btn-primary {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-2);
  }

  .cta-btn-primary svg {
    transition: transform var(--transition-fast);
  }

  .cta-btn-primary:hover svg {
    transform: translateX(4px);
  }

  /* Default variant */
  .cta-default {
    background: var(--color-background-secondary);
  }

  .cta-default .cta-title {
    color: var(--color-text);
  }

  .cta-default .cta-description {
    color: var(--color-text-secondary);
  }

  .cta-default .cta-btn-primary {
    background: var(--color-primary);
    color: var(--color-text-inverse);
    border-color: var(--color-primary);
  }

  .cta-default .cta-btn-primary:hover {
    background: var(--color-primary-hover);
    border-color: var(--color-primary-hover);
  }

  .cta-default .cta-btn-secondary {
    background: transparent;
    color: var(--color-text);
    border-color: var(--color-border);
  }

  .cta-default .cta-btn-secondary:hover {
    background: var(--color-surface-hover);
    border-color: var(--color-border-dark);
  }

  /* Primary variant */
  .cta-primary {
    background: linear-gradient(
      135deg,
      var(--color-primary) 0%,
      var(--color-primary-dark) 100%
    );
  }

  .cta-primary::before {
    content: '';
    position: absolute;
    inset: 0;
    background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M30 0L60 30L30 60L0 30L30 0z' fill='%23fff' fill-opacity='0.03'/%3E%3C/svg%3E");
    background-size: 60px 60px;
  }

  .cta-primary .cta-inner {
    position: relative;
  }

  .cta-primary .cta-title {
    color: white;
  }

  .cta-primary .cta-description {
    color: rgba(255, 255, 255, 0.9);
  }

  .cta-primary .cta-btn-primary {
    background: white;
    color: var(--color-primary);
    border-color: white;
    box-shadow: var(--shadow-lg);
  }

  .cta-primary .cta-btn-primary:hover {
    background: var(--color-primary-light);
    color: var(--color-primary-dark);
    transform: translateY(-2px);
    box-shadow: var(--shadow-xl);
  }

  .cta-primary .cta-btn-secondary {
    background: transparent;
    color: white;
    border-color: rgba(255, 255, 255, 0.5);
  }

  .cta-primary .cta-btn-secondary:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: white;
  }

  /* Dark variant */
  .cta-dark {
    background: var(--color-primary-dark);
  }

  .cta-dark::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(
      ellipse at center,
      rgba(59, 130, 246, 0.2) 0%,
      transparent 70%
    );
  }

  .cta-dark .cta-inner {
    position: relative;
  }

  .cta-dark .cta-title {
    color: white;
  }

  .cta-dark .cta-description {
    color: rgba(255, 255, 255, 0.8);
  }

  .cta-dark .cta-btn-primary {
    background: var(--color-primary);
    color: white;
    border-color: var(--color-primary);
  }

  .cta-dark .cta-btn-primary:hover {
    background: var(--color-primary-hover);
    border-color: var(--color-primary-hover);
  }

  .cta-dark .cta-btn-secondary {
    background: transparent;
    color: rgba(255, 255, 255, 0.9);
    border-color: rgba(255, 255, 255, 0.3);
  }

  .cta-dark .cta-btn-secondary:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.5);
  }
</style>
