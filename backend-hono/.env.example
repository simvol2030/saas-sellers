# Database
# SQLite (default)
DATABASE_URL="file:../data/db/app.db"

# PostgreSQL (uncomment and update credentials)
# DATABASE_URL="postgresql://username:password@localhost:5432/database_name"

# Server
PORT=3001
NODE_ENV=development

# CORS
# Comma-separated list of allowed origins
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:4321,http://localhost:5173"

# JWT Authentication
# IMPORTANT: Change this in production! Use a long random string (32+ chars)
JWT_SECRET="your-super-secret-key-change-in-production-32chars"
JWT_ACCESS_EXPIRES="15m"
JWT_REFRESH_EXPIRES="7d"
